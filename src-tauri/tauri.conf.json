{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "romana",
  "version": "0.1.0",
  "identifier": "com.onur.romana",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1422",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "romana",
        "width": 1440,
        "height": 1040,
        "backgroundColor": "#121223"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
